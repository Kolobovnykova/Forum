@model Forum.Models.ViewModels.ListOfCompleteTodosViewModel

@{
    ViewData["Title"] = "GetListOfCompleteTodos";
}
<div class="container">

    <h2>Get list of User's complete Todos</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Query" asp-action="GetListOfCompleteTodos" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label">Enter user Id for search:</label>
                    <input asp-for="Id" class="form-control"/>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-default"/>
                </div>
            </form>
        </div>
    </div>
    <div>
        @if (Model != null)
        {
            <table border="2" class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Todo Id</th>
                    <th scope="col">Todo Name</th>
                </tr>
                </thead>
                <tbody>
                @if (Model.Model != null)
                {
                    foreach (var item in Model.Model)
                    {
                        <tr>
                            <td>@item.Item1</td>
                            <td>@Html.ActionLink(item.Item2, "Details", "Todo", new {id = item.Item1})</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        }
        <a asp-area="" asp-controller="Query" asp-action="Index">Go back to Queries</a>
    </div>
</div>